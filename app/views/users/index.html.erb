
<%= render 'partial/navbar' %>

<div class="container bg-proedit">
    <div class="col-md-10 col-md-offset-1 proedit">
                   <h3> ユーザー一覧</h3>
                   <br>
           <div class="users-index">
                 <% @users.each do |user| %>
                  <%=link_to user_path(user) do%>

                      <div class="users-list text-center">

                             <% if user.icons.present? %>

                                       <%= image_tag user.icons[0].avatar.url() ,size: '150x150',class: "img-circle"%>
                                    <% else %>
                                      <%= image_tag 'avatar-default.png', size: '150x150'%>
                                  <% end %>


                             <br>
                             <div class="users-name">
                                  <%if user.name%>
                                        <%=link_to user_path(user) do%>
                                            <%=user.name %>
                                         <% end %>
                                         <% else %>
                                         <%=link_to user_path(user) do%>
                                              <%=user.nickname %>
                                         <% end %>
                                   <% end %>
                              </div>
                    </div>
                    <% end %>
                <%end%>

          </div>
   </div>

</div>











